<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Post title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-content">Post content:</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="create">Create</button>
      </div>
    </form>
  </div>

  <div class="col-md-6">
    {{#if posts.length}}
      <h3>Your Posts:</h3>
      {{#each posts as |post|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/post/{{post.id}}">{{shorten_string post.name}}</a></h4>
        </div>
        <div class="col-md-2">
          <button class="btn btn-sm btn-danger postEdit" data-id="{{post.id}}">EDIT</button>
        </div>
        <div class="col-md-2">
          <button class="btn btn-sm btn-danger postDelete" data-id="{{post.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    {{/if}}
    {{#if comments.length}}
      <h3>Your Comments:</h3>
      {{#each comments as |comment|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/post/{{comment.post_id}}">{{shorten_string comment.content}}</a></h4>
        </div>
        <div class="col-md-2">
          <button class="btn btn-sm btn-danger commentEdit" data-id="{{comment.id}}">EDIT</button>
        </div>
        <div class="col-md-2">
          <button class="btn btn-sm btn-danger commentDelete" data-id="{{comment.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    {{/if}}
  </div>
</div>

<script src="/js/dashboard.js"></script>
