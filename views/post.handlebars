<section>
  <h2>{{post.name}}</h2>
  <p>{{post.content}}</p>
  <p>Created by {{post.user.username}} on {{format_date post.date_created}}</p>
  <ul style="list-style-type:none">
    {{#each comments as |comment|}}
    <li class="card p-3">
        <p>{{comment.content}}</p>
        <span>Commented by {{comment.user.username}} on {{format_date comment.date_created}}.</span>
    </li>  
    {{/each}}
  </ul>
  {{#if logged_in}}
    <form class="form new-comment-form" data-id={{post.id}}>
      <div class="form-group">
        <input class="form-input" type="text" id="comment-content" name="comment-content" placeholder="Enter comment text"/>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="addComment">Add Comment</button>
      </div>
    </form>
  {{/if}}  
</section>

<script src="/js/comment.js"></script>






