<form class="form edit-post-form" data-id='{{post.id}}'>
    <div class="form-group">
        <label for="post-name">Post title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" value='{{post.name}}'>
    </div>
    <div class="form-group">
        <label for="post-content">Post content:</label>
        <input class="form-input" id="post-content" name="post-content" value='{{post.content}}'>
    </div>
    <div class="form-group">
    <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
    {{!-- <div class="form-group">
    <button type="submit" class="btn btn-primary" id="cancel">Cancel</button>
    </div> --}}
</form>

